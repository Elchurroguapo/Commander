
(UNCOMMENT LOCALE.GEN)
locale-gen
echo LANG=en_US.UTF-8 > /etc/locale.conf
export LANG=en_US.UTF-8

pacstrap /mnt base base-devel linux linux-headers nano bash-completion linux-firmware
genfstab -U -p /mnt >> /mnt/etc/fstab
cat /mnt/etc/fstab

arch-chroot /mnt
pacman -Syu
nano /etc/pacman.conf
